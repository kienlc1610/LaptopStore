
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<div class="container" ng-controller="RegisterController">
        <div class="card card-register mx-auto mt-5">
            <div class="card-header">Register an Account</div>
            <div class="card-body">
                <form name="frmRegister">
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6" data-ng-class="{ 'has-error':(frmRegister.firstName.$touched && frmRegister.firstName.$error.required) }">
                                <label for="exampleInputName">First name</label>
                                <input ng-model="account.firstName" class="form-control" id="exampleInputName" name="firstName" type="text" aria-describedby="nameHelp" placeholder="Enter first name" required>
                                <div data-ng-show="frmRegister.firstName.$touched && frmRegister.firstName.$error.required" class="help-block">
                                    <span data-ng-show="frmRegister.firstName.$error.required" class="text-danger"> <strong>Error</strong> : <span>Please provide first name</span> !</span>
                                    <!--<span class="xpaas-error-message-color" data-ng-show="frmProject.name.$error.minlength"> <strong data-translate="ERROR">:</strong>Project name must be more than 3 words</span>-->
                                </div>
                            </div>
                            
                            <div class="col-md-6" data-ng-class="{ 'has-error':(frmRegister.lastName.$touched && frmRegister.lastName.$error.required) }">
                                <label for="exampleInputLastName">Last name</label>
                                <input class="form-control" ng-model="account.lastName" id="exampleInputLastName" name="lastName" type="text" aria-describedby="nameHelp" placeholder="Enter last name"required>
                                <div data-ng-show="frmRegister.lastName.$touched && frmRegister.lastName.$error.required" class="help-block">
                                    <span data-ng-show="frmRegister.firstName.$error.required" class="text-danger"> <strong>Error</strong> : <span>Please provide last name</span> !</span>
                                    <!--<span class="xpaas-error-message-color" data-ng-show="frmProject.name.$error.minlength"> <strong data-translate="ERROR">:</strong>Project name must be more than 3 words</span>-->
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Email address</label>
                        <input class="form-control" id="exampleInputEmail1" name="email" ng-model="account.email" type="email" aria-describedby="emailHelp" placeholder="Enter email" required>
                        <div data-ng-show="frmRegister.email.$touched && frmRegister.email.$error.required" class="help-block">
                            <span data-ng-show="frmRegister.email.$error.required" class="text-danger"> <strong>Error</strong> : <span>Please provide email</span> !</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                <label for="exampleInputPassword1">Password</label>
                                <input class="form-control" id="exampleInputPassword1" name="password" ng-model="account.password" type="password" placeholder="Password" minlength="6" required data-ng-change="checkPassword(account.password)">
                                <div data-ng-show="frmRegister.password.$touched && frmRegister.password.$error.required || passwordIsWrong || frmRegister.password.$error.minlength" class="help-block">
                                    <span data-ng-show="frmRegister.password.$error.minlength" class="text-danger"> <strong>Error</strong> : <span>Passwords must be 6 characters long</span> !</span>
                                    <span data-ng-show="frmRegister.password.$error.required" class="text-danger"> <strong>Error</strong> : <span>Password cannot empty</span> !</span>
                                    <span data-ng-show="passwordIsWrong && !frmRegister.password.$error.minlength" class="text-danger"> <strong>Error</strong> : <span>
                                         Password must contain at least one lowercase letter, one uppercase letter, and one special character
                                             </span> !</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="exampleConfirmPassword">Confirm password</label>
                                <input class="form-control" id="exampleConfirmPassword" ng-model="account.confirmPassword" type="password" placeholder="Confirm password" data-ng-change="comparePassword()" >
                                <div data-ng-show="isConfirmPasswordWrong" class="help-block">
                                    <span data-ng-show="isConfirmPasswordWrong" class="text-danger"> <strong>Error</strong> : <span>Passwords do not match</span> !</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-primary btn-block" data-ng-disabled="!frmRegister.$valid || isConfirmPasswordWrong == true || passwordIsWrong == true" ng-click="doRegisterAccount(account)">Register</button>
                </form>
                <div class="text-center">
                    <a class="d-block small mt-3" href="/Account/Login">Login Page</a>
                    <a class="d-block small" href="forgot-password.html">Forgot Password?</a>
                </div>
            </div>
        </div>
    </div>