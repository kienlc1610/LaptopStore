@model WebAPI.Models.Category
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var cateId = ViewBag.CateId;
}
<h2>Edit</h2>
<h4>Category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.HiddenFor(model=>model.CateId)
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alias" class="control-label"></label>
                <input asp-for="Alias" class="form-control" />
                <span asp-validation-for="Alias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="button" value="Save" class="btn btn-default" onclick="Update()" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
<script>
    $(document).ready(function () {
        $.ajax({
            type: "GET",
            url: "http://localhost:49595/api/Categories/"+ @cateId,
            success: function(data) {
                $("#CateId").val(data.cateId);
                $("#Name").val(data.name);
                $("#Alias").val(data.alias);
            },
            error: function(a, b, c) {
                console.log(a);
                console.log(b);
                console.log(c);
            }
        });
    });
    function Update() {
        var data = {
            cateId:$("#CateId").val(),
             Name:$("#Name").val(),
            Alias:$("#Alias").val()
        };
        $.ajax({
            crossDomain: true,
            type: "POST",
            url: "http://localhost:49595/api/Categories/Update",
            //contentType: "application/json",//; charset = utf - 8
            dataType:"json",
            data: data,//JSON.stringify(data),
            success: function(result) {
                window.location.href = "/Categories";
            },
            error: function(a, b, c) {
                alert("Error when update category");
            }
        });
    }
</script>
