@model WebAPI.Models.Category

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var cateId = ViewBag.CateId;
}

<h2>Details</h2>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="dl-horizontal">
        
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.TextBoxFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Alias)
        </dt>
        <dd>
            @Html.TextBoxFor(model => model.Alias)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new {  id = cateId  }) |
    <a asp-action="Index">Back to List</a>
</div>

<script>
    $(function () {
        $("input").prop("disabled", "disabled");
        $.ajax({
            type: "GET",
            url: "http://localhost:49595/api/Categories/"+ @cateId,
            success: function(data) {
                $("#CateId").val(data.cateId);
                $("#Name").val(data.name);
                $("#Alias").val(data.alias);
            },
            error: function(a, b, c) {
                console.log(a);
                console.log(b);
                console.log(c);
            }
        });
    });
</script>
