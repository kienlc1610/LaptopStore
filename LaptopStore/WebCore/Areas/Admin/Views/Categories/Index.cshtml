
@{
    ViewData["Title"] = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Category List</h1>

<form asp-controller="Categories" asp-action="Index" method="get">
    <p>
        <a asp-action="Create" id="insert" class="btn btn-danger" style="font-size:12pt;">Create New</a>
    </p>
    <table class="table table-striped" border="1" cellpadding="10">
        <thead class="table-bordered" style="background-color:#00ff21;">
            <tr>
                <th>
                    Category ID:
                </th>
                <th>
                    Category Name:
                </th>
                <th>
                    Category Alias:
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="tableCate"></tbody>
    </table>
    <br />
    <div id="msg"></div>
</form>

<script src="https://code.jquery.com/jquery-3.2.1.min.js"
        integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
        crossorigin="anonymous">
</script>

<script>

    $(document).ready(function () {
        $.ajax({
            type: "GET",
            url: "http://localhost:49595/api/Categories",
            //dataType: "json",
            //contentType: "application/json",
            success: function(data) {
                for (var i = 0; i < data.length; i++) {
                    var item = data[i];
                    $("#tableCate").append('<tr>\
                        <td>\
                        <div id="cateid">'+ item.cateId + '</div>\
                        </td>\
                        <td>\
                        <div id="name">'+ item.name + '</div>\
                        </td>\
                        <td>\
                        <div id="alias">'+ item.alias + '</div>\
                        </td>\
                        <td style="font-size:12pt;">\
                        <a href="/Categories/Details?id='+ item.cateId + '" id="detail" class="btn btn-success">Details</a> |\
                    <a href="/Categories/Edit?id='+ item.cateId + '" id="update" class="btn btn-success">Update</a> |\
                    <button type="button" onclick="DeleteCate('+ item.cateId + ')" id="delete" class="btn btn-success">Delete</button>\
                        </td>\
                        </tr>');
                }
            },
            error: function(a, b, c) {
                console.log(a);
                console.log(b);
                console.log(c);
            }
        });
        $("#cateid").change(function () {
            var options = {};
            options.url = "http://localhost:49595/api/Categories/{id}" + $("#CateId").val();
            options.type = "GET";
            options.dataType = "json";
            options.success = function (data) {
                $("#name").val(data.Name);
                $("#alias").val(data.Alias);
            };
            options.error = function () {
                $("#msg").html("Error while calling the Web API!");
            };
            $.ajax(options);
        });
    });

    function DeleteCate(id) {
        if (confirm("Do you want to delete this category?")) {
            $.ajax({
                crossDomain: true,
                type: "DELETE",
                url: "http://localhost:49595/api/Categories/"+ id,
                dataType:"json",
                success: function(result) {
                    location.reload();
                },
                error: function(a, b, c) {
                    alert("Error when delete category");
                }
            });
        }
    }
</script>





