
@{
    ViewData["Title"] = "Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Category List</h1>

<form asp-controller="Categories" asp-action="Index" method="get">
    <p>
        <a asp-action="Create" id="insert" style="font-size:14pt;">Create New</a>
    </p>
    <table class="table table-striped" border="1" cellpadding="10">
        <thead class="table-bordered" style="background-color:#00ff21;">
            <tr>
                <th>
                    Category ID:
                </th>
                <th>
                    Category Name:
                </th>
                <th>
                    Category Alias:
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="tableCate"></tbody>
    </table>
    <br />
    <div id="msg"></div>
</form>
<script src="https://code.jquery.com/jquery-3.2.1.min.js"
        integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
        crossorigin="anonymous"></script>
<script>

    $(document).ready(function () {
        $.ajax({
            type: "GET",
            url: "http://localhost:49595/api/Categories",
            //dataType: "json",
            //contentType: "application/json",
            success: function(data) {
                for (var i = 0; i < data.length; i++) {
                    var item = data[i];
                    $("#tableCate").append('<tr>\
                        <td>\
                        <div id="cateid">'+ item.cateid + '</div>\
                        </td>\
                        <td>\
                        <div id="name">'+ item.name + '</div>\
                        </td>\
                        <td>\
                        <div id="alias">'+ item.alias + '</div>\
                        </td>\
                        <td style="font-size:12pt;">\
                        <a onclick="Details('+ item.cateid + ')" id="detail">Details</a> |\
                    <a onclick="Update('+ item.cateid + ')" id="update">Update</a> |\
                    <a onclick="Delete('+ item.cateid + ')" id="delete">Delete</a>\
                        </td>\
                        </tr>');
                }
            },
            error: function(a, b, c) {
                console.log(a);
                console.log(b);
                console.log(c);
            }
        });
        $("#cateid").change(function () {
            var options = {};
            options.url = "http://localhost:49595/api/Categories/{id}" + $("#CateId").val();
            options.type = "GET";
            options.dataType = "json";
            options.success = function (data) {
                $("#name").val(data.Name);
                $("#alias").val(data.Alias);
            };
            options.error = function () {
                $("#msg").html("Error while calling the Web API!");
            };
            $.ajax(options);
        });
    });
</script>





