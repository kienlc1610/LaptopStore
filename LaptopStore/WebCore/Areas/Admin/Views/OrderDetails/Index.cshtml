
@{
    ViewData["Title"] = "OrderDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>OrderDetail List</h2>

<form asp-controller="OrderDetails" asp-action="Index" method="get">
    <p>
        <a asp-action="Create" id="insert" style="font-size:14pt;">Create New</a>
    </p>
    <table class="table" border="1" cellpadding="10">
        <thead class="table-bordered" style="background-color:#00ff21;">
            <tr>
                <th>
                    OrderDetail ID:
                </th>
                <th>
                    Order ID:
                </th>
                <th>
                    Product ID:
                </th>
                <th>
                    Discount:
                </th>
                <th>
                    Quantity:
                </th>
                <th>
                    Unit Price:
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="tableOrderDetail"></tbody>
    </table>
    <br />
    <div id="msg"></div>
</form>
<script src="https://code.jquery.com/jquery-3.2.1.min.js"
        integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
        crossorigin="anonymous">
</script>

<script>

    $(document).ready(function () {
        $.ajax({
            type: "GET",
            url: "http://localhost:49595/api/OrderDetails",
            //dataType: "json",
            //contentType: "application/json",
            success: function (data) {
                for (var i = 0; i < data.length; i++) {
                    var item = data[i];
                    $("#tableOrderDetail").append('<tr>\
                        <td>\
                        <div id="orderdetailid">'+ item.orderdetailid + '</div>\
                        </td>\
                        <td>\
                        <div id="orderid">'+ item.orderid + '</div>\
                        </td>\
                        <td>\
                        <div id="productid">'+ item.productid + '</div>\
                        </td>\
                        <td>\
                        <div id="discount">'+ item.discount + '</div>\
                        </td>\
                        <td>\
                        <div id="quantity">'+ item.quantity + '</div>\
                        </td>\
                        <td>\
                        <div id="unitprice">'+ item.unitprice + '</div>\
                        </td>\
                        <td style="font-size:12pt;">\
                        <a onclick="Details('+ item.orderdetailid + ')" id="detail">Details</a> |\
                    <a onclick="Update('+ item.orderdetailid + ')" id="update">Update</a> |\
                    <a onclick="Delete('+ item.orderdetailid + ')" id="delete">Delete</a>\
                        </td>\
                        </tr>');
                }
            },
            error: function (a, b, c) {
                console.log(a);
                console.log(b);
                console.log(c);
            }
        });
        $("#orderdetailid").change(function () {
            var options = {};
            options.url = "http://localhost:49595/api/OrderDetails/{id}" + $("#OrderDetailID").val();
            options.type = "GET";
            options.dataType = "json";
            options.success = function (data) {
                $("#orderid").val(data.OrderID);
                $("#productid").val(data.Productid);
                $("#discount").val(data.Discount);
                $("#quantity").val(data.Quantity);
                $("#unitprice").val(data.Unitprice);
            };
            options.error = function () {
                $("#msg").html("Error while calling the Web API!");
            };
            $.ajax(options);
        });
    });
</script>

