@model WebAPI.Models.OrderDetail

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var id = ViewBag.Id;
}

<h2>Details</h2>

<div>
    <h4>OrderDetail</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd>
            @Html.TextBoxFor(model => model.Id)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.OrderId)
        </dt>
        <dd>
            @Html.TextBoxFor(model => model.OrderId)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ProductId)
        </dt>
        <dd>
            @Html.TextBoxFor(model => model.ProductId)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Discount)
        </dt>
        <dd>
            @Html.TextBoxFor(model => model.Discount)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd>
            @Html.TextBoxFor(model => model.Quantity)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </dt>
        <dd>
            @Html.TextBoxFor(model => model.UnitPrice)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id= id }) |
    <a asp-action="Index">Back to List</a>
</div>

<script>
    $(function () {
        $("input").prop("disabled", "disabled");
        $.ajax({
            type: "GET",
            url: "http://localhost:49595/api/OrderDetails/" + @id,
            success: function (data) {
                $("#Id").val(data.id);
                $("#OrderId").val(data.orderId);
                $("#ProductId").val(data.productId);
                $("#Discount").val(data.discount);
                $("#Quantity").val(data.quantity);
                $("#UnitPrice").val(data.unitPrice);
            },
            error: function(a, b, c) {
                console.log(a);
                console.log(b);
                console.log(c);
            }
        });
    });
</script>
