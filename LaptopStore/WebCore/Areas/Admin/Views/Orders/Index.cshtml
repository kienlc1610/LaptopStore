
@{
    ViewData["Title"] = "Order";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Order List</h2>

<form asp-controller="Orders" asp-action="Index" method="get">
    <table class="table" border="1" cellpadding="10">
        <thead class="table-bordered" style="background-color:#00ff21;">
            <tr>
                <th>
                    Order ID:
                </th>
                <th>
                    Customer ID:
                </th>
                <th>
                    Address:
                </th>
                <th>
                    RequireDate:
                </th>
                <th>
                    OrderDate:
                </th>
                <th>
                    Status:
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="tableOrder"></tbody>
    </table>
    <br />
    <div id="msg"></div>
</form>
<script src="https://code.jquery.com/jquery-3.2.1.min.js"
        integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
        crossorigin="anonymous">
</script>

<script>

    $(document).ready(function () {
        $.ajax({
            type: "GET",
            url: "http://localhost:49595/api/Orders",
            //dataType: "json",
            //contentType: "application/json",
            success: function (data) {
                for (var i = 0; i < data.length; i++) {
                    var item = data[i];
                    $("#tableOrder").append('<tr>\
                        <td>\
                        <div id="orderid">'+ item.orderId + '</div>\
                        </td>\
                        <td>\
                        <div id="customerid">'+ item.customerId + '</div>\
                        </td>\
                        <td>\
                        <div id="address">'+ item.address + '</div>\
                        </td>\
                        <td>\
                        <div id="requiredate">'+ item.requireDate + '</div>\
                        </td>\
                        <td>\
                        <div id="orderdate">'+ item.orderDate + '</div>\
                        </td>\
                        <td>\
                        <div id="status">'+ item.status + '</div>\
                        </td>\
                        <td style="font-size:12pt;">\
                        <a href="/Admin/Orders/Details?id='+ item.orderId + '" id="detail" class="btn btn-success">Details</a> \
                    <a href="/Admin/Orders/Edit?id='+ item.orderId + '" id="update" class="btn btn-success">Update</a> \
                    <button type="button" onclick="DeleteOrder('+ item.orderId + ')" id="delete" class="btn btn-success">Delete</button>\
                        </td>\
                        </tr>');
                }
            },
            error: function (a, b, c) {
                console.log(a);
                console.log(b);
                console.log(c);
            }
        });
        $("#orderid").change(function () {
            var options = {};
            options.url = "http://localhost:49595/api/Orders/{id}" + $("#OrderId").val();
            options.type = "GET";
            options.dataType = "json";
            options.success = function (data) {
                $("#customerid").val(data.CustomerId);
                $("#address").val(data.Address);
                $("#requiredate").val(data.RequireDate);
                $("#orderdate").val(data.OrderDate);
                $("#status").val(data.Status);
            };
            options.error = function () {
                $("#msg").html("Error while calling the Web API!");
            };
            $.ajax(options);
        });
    });

    function DeleteOrder(id) {
        if (confirm("Do you want to delete this order?")) {
            $.ajax({
                crossDomain: true,
                type: "DELETE",
                url: "http://localhost:49595/api/Orders/" + id,
                dataType: "json",
                success: function (result) {
                    location.reload();
                },
                error: function (a, b, c) {
                    alert("Error when delete product");
                }
            });
        }
    }
</script>

