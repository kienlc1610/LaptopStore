@model WebAPI.Models.Customer

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Create</h2>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <input asp-for="CustomerId" class="form-control" />
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fullname" class="control-label"></label>
                <input asp-for="Fullname" class="form-control" />
                <span asp-validation-for="Fullname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Activated" /> @Html.DisplayNameFor(model => model.Activated)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" onclick="Create()" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script>
    $(function () {
        $.ajax({
            type: "GET",
            url: "http://localhost:49595/api/Customers",
            success: function (data) {
                $("#CustomerId").val(data.customerId);
                $("#Password").val(data.password);
                $("#Fullname").val(data.fullname);
                $("#Address").val(data.address);
                $("#Activated").prop("checked", data.activated);
            },
            error: function (a, b, c) {
                console.log(a);
                console.log(b);
                console.log(c);
            }
        });
    });

    function Create() {
        var data = {
            CustomerId: $("#CustomerId").val(),
            Password: $("#Password").val(),
            Fullname: $("#Fullname").val(),
            Address: $("#Address").val(),
            Activated: $("#Activated").is(":checked")
        };
        $.ajax({
            crossDomain: true,
            type: "POST",
            url: "http://localhost:49595/api/Customers/Create",
            dataType: "json",
            data: data,
            success: function (result) {
                window.location.href = "/Customers";
            },
            error: function (a, b, c) {
                console.log(a);
                console.log(b);
                console.log(c);
            }
        });
    }
</script>

