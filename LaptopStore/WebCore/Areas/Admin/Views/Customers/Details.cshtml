@model WebAPI.Models.Customer

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var customerId = ViewBag.CustomerId;
}

<h2>Details</h2>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CustomerId)
        </dt>
        <dd>
            @Html.TextBoxFor(model => model.CustomerId)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd>
            @Html.TextBoxFor(model => model.Password)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Fullname)
        </dt>
        <dd>
            @Html.TextBoxFor(model => model.Fullname)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd>
            @Html.TextBoxFor(model => model.Address)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Activated)
        </dt>
        <dd>
            @Html.CheckBoxFor(model => model.Activated)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = customerId }) |
    @Html.ActionLink("Back to list", "Index" , new { id = customerId })
</div>

<script>
    $(document).ready(function () {
        $("input").prop("disabled", "disabled");
        $.ajax({
            type: "GET",
            url: "http://localhost:49595/api/Customers/"+ @customerId,
            success: function(data) {
                $("#CustomerId").val(data.customerId);
                $("#Password").val(data.password);
                $("#Fullname").val(data.fullname);
                $("#Adress").val(data.address);
                $("#Activated").prop("checked", data.activated);
            },
            error: function(a, b, c) {
                console.log(a);
                console.log(b);
                console.log(c);
            }
        });
    });
</script>
